<UserControl x:Class="Todo.MVVM.View.TaskListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Todo.MVVM.View" 
             xmlns:viewmodel="clr-namespace:Todo.MVVM.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:TaskListViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="640">

    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="1"
                   HorizontalAlignment="Right">
            <!-- Przycisk "Details" -->
            <Button Grid.Column="0" 
                    Margin="5" 
                    Padding="5"
                    Command="{Binding ShowDetailsCommand}">Details</Button>

            <!-- Przycisk "Edit Task" -->
            <Button Grid.Column="1" 
                    Margin="5" 
                    Padding="5"
                    Command="{Binding ShowEditTaskCommand}">Edit Task</Button>
        </WrapPanel>

        <TextBlock Grid.Row="0"
                   Text="Task list"
                   FontSize="30"
                   HorizontalAlignment="Center"/>

    </Grid>

</UserControl>
